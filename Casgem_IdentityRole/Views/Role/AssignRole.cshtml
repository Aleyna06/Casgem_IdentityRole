@model List<RoleAssignViewModel>
@{
    Layout = null;
}

<div class="contaier">
    <br /> <br />
    <form method="post">
        <h2>Rol Atama Sayfası</h2>
        @for (int i = 0; i < Model.Count; i++)
        {
          <div class="form-check">
              <input type="hidden" asp-for="@Model[i].RoleId">
              <input type="hidden" asp-for="@Model[i].RoleName">
              <input type="hidden" asp-for="@Model[i].RoleExist" class="form-check-input">
                <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
          </div>  
        }
    </form>
    <button class="btn btn-primary">Rol Atama Güncelle</button>
</div>
